<%- include('header', {title: `Est Info`}); -%>
  <form action="/listing/<%= estb.id %>?_method=PUT" method="POST">
    <div class="p-5 mb-4 bg-light rounded-3">
      <div class="container-fluid py-5">
        <h1 class="display-5 fw-bold">
          <textarea class="form-control" name="name" rows="3" required><%= estb.name %></textarea>
        </h1>
      </div>
    </div>
    <div class="row align-items-md-stretch">
      <div class="col-md-6 ">
        <div class="h-100 p-5 text-white bg-dark rounded-3">
          <div class="col-md-6 mb-3 submit-label">
            <label for="Address" class="form-label" required style="color: white">Address</label>
            <textarea class="form-control" name="address" rows="3"><%= estb.address %></textarea>
          </div>
          <div class="col-md-12 mb-3 submit-label">
            <label for="areas" class="form-label" style="color: white">Areas</label>
            <br>
            <select name="area" required>
              <% areaData.areas.forEach((area)=> { %>
                <option value="<%= area %>">
                  <%= area %>
                </option>
                <% }); %>
            </select>
          </div>
          <div class="col-md-5 mb-3 submit-label">
            <label for="contact" class="form-label" style="color: white">Contact Number</label>
            <textarea class="form-control" name="contact" rows="1" required> <%= estb.contact %></textarea>
          </div>
        </div>
      </div>
      <div class="col-md-6">
        <div class="h-100 p-5 bg-light border rounded-3">
          <div class="col-md-12 mb-3 submit-label" style="color:black">
            <label style="color:black" for="cuisine" class="form-label">Cuisine</label>
            <br>
            <% cuisineData.cuisines.forEach((cuisinetype)=> { %>
              <label style="color: black;">
                <%= cuisinetype.cuisine %>
              </label>
              <input type="checkbox" name="cuisines" value="<%=  cuisinetype.cuisine %>" />
              <% }); %>
          </div>
          <div class="col-md-10 mb-3 submit-label">
            <label for="comments" class="form-label" style="color:black">Comments</label>
            <% for (let i=0; i < comments.length; i +=1 ) {%>
              <textarea disabled class="form-control" name="comments"
                rows="1"> <%= comments[i].username %>: <%= comments[i].comment %> </textarea>
              <% } %>
          </div>

        </div>
      </div>
    </div>
    <div class="col-md-12">
      <input type="submit" value="Submit">
    </div>
    <br>
    <div class="col-md-12">
      <input type="reset">
    </div>
  </form>
  <%- include('footer'); -%>