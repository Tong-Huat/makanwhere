<%- include('header', {title: `Reservation`}); -%>

  <h1 style="text-align: center">Reservation</h1>
  <div class="container">
    <form action="/listing/<%= id %>/reservation" method="POST">
      <div class="col-md-4 mb-3 submit-label">
        <label for="name" class="form-label">Name</label>
        <input type="text" class="form-control" name="name" rows="3" required>
      </div>
      <div class="col-md-3 mb-3 submit-label">
        <label for="contact" class="form-label">Contact</label>
        <input type="tel" pattern="[0-9]{8}" required placeholder="12345678" class="form-control" name="contact"
          rows="1">
      </div>
      <div class="col-md-3 mb-3 submit-label">
        <label for="email" class="form-label">Email</label>
        <input type="email" class="form-control" name="email" required rows="1">
      </div>
      <div class="col-md-4 mb-3 submit-label">
        <label for="remarks" class="form-label">Remarks</label>
        <input type="text" class="form-control" name="remarks" rows="3" required>
      </div>
      <div class="col-md-12">
        <input type="submit" value="Submit">
      </div>
      <br>
      <div class="col-md-12">
        <input type="reset">
      </div>
    </form>
    <br>
    <br>
    <br>

    <%- include('footer'); -%>